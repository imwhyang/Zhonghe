<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/res_color_white"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/id_user_like_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_item_height"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/padding_xxlsize"
        android:paddingRight="@dimen/padding_xxlsize">

        <ImageView
            android:id="@+id/ids_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_market" />

        <TextView
            style="@style/common_text_user_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_lsize"
            android:layout_toRightOf="@id/ids_like"
            android:text="@string/str_home_category_title" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_next"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_divider_line_msize"
        android:layout_alignParentBottom="true"
        android:background="@color/common_gray" />

    <com.zhonghe.shiangou.ui.widget.FlowLayout
        android:id="@+id/id_home_categroy_title_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.zhonghe.shiangou.ui.widget.FlowLayout>

</LinearLayout>