<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_layout_id_changenum"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_hight_size"
        android:background="@drawable/common_button_white_pressed"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layout_id_reduce_iv"
            android:layout_width="@dimen/view_width_lsize"
            android:layout_height="match_parent"
            android:src="@mipmap/cart_reduce" />

        <View style="@style/common_vertical_divider_style" />

        <TextView
            android:id="@+id/layout_id_number_tv"
            android:minWidth="@dimen/view_width_lsize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/common_font_normal"
            android:textSize="@dimen/font_xxxlsize" />

        <View style="@style/common_vertical_divider_style" />

        <ImageView
            android:id="@+id/layout_id_add_iv"
            android:layout_width="@dimen/view_width_lsize"
            android:layout_height="match_parent"
            android:src="@mipmap/cart_add" />
    </LinearLayout>
</LinearLayout>