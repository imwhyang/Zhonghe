<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--地址itemlayout-->

    <RelativeLayout
        android:id="@+id/address_item_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_hight_xxmsize"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_xxxlsize">

        <CheckBox
            android:id="@+id/item_cart_id_cb"
            style="@style/common_checkbox_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/address_user_tv"
            style="@style/common_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxxlsize"
            android:layout_toRightOf="@id/item_cart_id_cb"
            android:text="雷文豪" />


        <TextView
            android:id="@+id/address_default_tv"
            style="@style/common_address_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_m"
            android:layout_toRightOf="@id/address_user_tv"
            android:text="@string/address_default_text"
            android:visibility="visible" />

        <TextView
            android:id="@+id/address_phone_tv"
            style="@style/common_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/address_user_tv"
            tools:text="15311112222" />


        <ImageView
            android:id="@+id/address_image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_xxxlsize"
            android:background="@mipmap/icon_next"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/address_user_tv"
            android:layout_alignStart="@+id/address_user_tv"
            android:layout_below="@+id/address_user_tv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_xxlsize"
            android:layout_toLeftOf="@+id/address_image_right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/address_content_tv"
                style="@style/common_text_user_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="北京市海滨区北京市海滨区北京市海滨区北京市海滨区北京市海滨区北京市海滨区" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_divider_line_lsize"
        android:layout_alignParentBottom="true"
        android:background="@color/common_divide_shallow" />
</LinearLayout>