<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apptool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View style="@style/common_divider_style1" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_msize"
        android:paddingLeft="@dimen/padding_xxlsize"
        android:paddingRight="@dimen/padding_xxlsize"
        android:paddingTop="@dimen/padding_msize">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/id_home_category_item_iv"
            android:layout_width="@dimen/home_category_item_img_width"
            android:layout_height="@dimen/home_category_item_img_height"
            android:scaleType="fitXY"
            app:placeholderImage="@mipmap/icon_pro_default"
            />

        <TextView
            android:id="@+id/id_home_category_item_title_tv"
            style="@style/home_category_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/id_home_category_item_iv"
            android:layout_marginLeft="@dimen/margin_xxlsize"
            android:layout_toRightOf="@id/id_home_category_item_iv"
            android:text="滑仔菇滑仔菇滑仔菇滑仔菇滑滑仔菇滑仔菇滑仔菇滑仔菇滑仔菇" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_home_category_item_iv"
            android:layout_marginLeft="@dimen/margin_xxlsize"
            android:layout_toRightOf="@id/id_home_category_item_iv"
            android:orientation="horizontal">

            <TextView
                style="@style/symbol_money_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/symbol_money" />

            <TextView
                android:id="@+id/id_home_category_item_price_tv"
                style="@style/home_category_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:text="128.00" />

            <TextView
                android:id="@+id/id_home_category_item_oldprice_tv"
                style="@style/home_category_item_oldmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:text="128.00" />
        </LinearLayout>

        <ImageView
            android:id="@+id/id_home_category_item_cart_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_home_category_item_iv"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_home_cart" />
    </RelativeLayout>
</RelativeLayout>