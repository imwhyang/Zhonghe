<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:id="@+id/id_setup_setname_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:minHeight="@dimen/user_item_height"
        android:padding="@dimen/padding_xxlsize">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/id_setup_setheader_sv"
            android:layout_width="@dimen/image_height_size"
            android:layout_height="@dimen/image_height_size"
            android:layout_centerVertical="true"
            android:src="@mipmap/res_default_header"
            app:placeholderImage="@mipmap/res_default_header" />

        <TextView
            style="@style/common_text_setup_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_lsize"
            android:layout_toRightOf="@id/id_setup_setheader_sv"
            android:text="@string/setup_setname_text" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_next" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_divider_line_msize"
        android:layout_alignParentBottom="true"
        android:background="@color/common_gray" />

    <RelativeLayout
        android:id="@+id/id_setup_address_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_item_height"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/padding_xxlsize"
        android:paddingRight="@dimen/padding_xxlsize">


        <TextView
            style="@style/common_text_setup_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_lsize"
            android:text="@string/setup_address_text" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_next" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_divider_line_msize"
        android:layout_alignParentBottom="true"
        android:background="@color/common_gray" />

    <RelativeLayout
        android:id="@+id/id_setup_changepwd_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_item_height"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/padding_xxlsize"
        android:paddingRight="@dimen/padding_xxlsize">


        <TextView
            style="@style/common_text_setup_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_lsize"
            android:text="@string/setup_changepwd_text" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_next" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_divider_line_msize"
        android:layout_alignParentBottom="true"
        android:background="@color/common_gray" />

    <RelativeLayout
        android:id="@+id/id_setup_fgvpwd_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_item_height"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/padding_xxlsize"
        android:paddingRight="@dimen/padding_xxlsize">


        <TextView
            style="@style/common_text_setup_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_lsize"
            android:text="@string/setup_forgetpwd_text" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_next" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_divider_line_msize"
        android:layout_alignParentBottom="true"
        android:background="@color/common_gray" />
</LinearLayout>
    <Button
        android:layout_alignParentBottom="true"
        style="@style/button_orangecirc_bg_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_xmsize"
        android:layout_marginRight="@dimen/padding_xmsize"
        android:layout_marginBottom="@dimen/padding_xmsize"
        android:layout_marginTop="@dimen/margin_hsize"
        android:text="@string/title_logout_title" />
</RelativeLayout>
